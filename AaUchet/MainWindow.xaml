<Window x:Class="AaUchet.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AaUchet"
        mc:Ignorable="d"
        Title="Учебное заведение" Height="1000" Width="1200" MinWidth="800" FontFamily="Segoe UI" FontSize="18" Icon="image/icon.ico">

    <Grid Background="#212121">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,20">
            <TextBlock Text="Учебное заведение" FontSize="36" Foreground="#E1E1E1" FontWeight="Bold" />
        </StackPanel>

        <Frame Grid.Row="1" Name="MainFrame" NavigationUIVisibility="Hidden" BorderBrush="#4CAF50" BorderThickness="2" Margin="20">
            <Frame.Background>
                <SolidColorBrush Color="#303030"/>
            </Frame.Background>
        </Frame>
        <Image Source="image/picture.png" Margin="20,11,890,0"/>
    </Grid>

</Window>
